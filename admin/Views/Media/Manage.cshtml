@model Media

@{
    ViewData["Title"] = "Index";
}

@section style{
    <link href="~/lib/cropperjs-master/dist/cropper.css" rel="stylesheet" />
    <style>
        .portlet-body
        {
            height: auto;
            background-color: #fff;
            padding: 10px !important;
        }

        .cropForm
        {
            background: linear-gradient(to right, #ffd800 50%, rgba(255, 255, 255, 0) 0%), linear-gradient(#ffd800 50%, rgba(255, 255, 255, 0) 0%), linear-gradient(to right, #ffd800 50%, rgba(255, 255, 255, 0) 0%), linear-gradient(#ffd800 50%, rgba(255, 255, 255, 0) 0%);
            background-position: top, right, bottom, left;
            background-repeat: repeat-x, repeat-y;
            background-size: 10px 1px, 1px 10px;
            padding: 60px;
        }

            .cropForm::after
            {
                content: '';
                position: absolute;
            }

        .drop-text
        {
            text-align: center;
            color: #000;
            font-size: 32px;
            width: 100%;
            height: 100%;
        }

            .drop-text .drop-text-bold
            {
                font-weight: bold;
            }

            .drop-text i
            {
                margin: 0 20px;
            }

        .label
        {
            text-align: center;
            cursor: pointer;
        }

        .progress
        {
            margin-top: 20px;
            display: none;
            margin-bottom: 1rem;
        }

        .alert
        {
            margin-top: 20px;
            display: none;
        }

        .img-container img
        {
            max-width: 100%;
        }

        .drop-image
        {
            width: auto;
            height: 350px;
        }
    </style>
}
@section script {
    <script src="~/lib/cropperjs-master/dist/cropper.js"></script>
    <script src="~/lib/file-drop/jquery-filedrop.js"></script>
    <script>

        $('.cropForm').on({
            dragenter: function (e) {
                $(this).css('background-color', '#d5d8de');
            },
            dragleave: function (e) {
                $(this).css('background-color', '#e9ecf3');
            },
        });
    </script>
    <script src="~/js/media.js"></script>
}


<div class="row">
    <div class="col-md-12">
        <div class="portlet light portlet-fit portlet-form bordered">
            <div class="portlet-title">
                <div class="caption">
                    <span class="caption-subject font-green bold uppercase">Resim Ekle</span>
                </div>
            </div>
            <div class="portlet-body">
                <form class="cropForm text-center" asp-controller="Media" asp-action="Manage" enctype="multipart/form-data">
                    <!--Crop Modal-->
                    <label class="label cropLabel" data-toggle="tooltip" title="Resim Seç">
                        <img class="drop-image" id="avatar" src="">
                        <span class="drop-text"><i class="fa fa-arrow-circle-right"></i>Resim <span class="drop-text-bold">Yerleştirin</span> ya da <span class="drop-text-bold">Sürükleyin</span><i class="fa fa-arrow-circle-left"></i></span>
                        <input type="file" class="sr-only" id="input" name="avatar" accept="image/*">
                    </label>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
                    </div>
                    <div class="alert" role="alert"></div>
                    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalLabel">Resmi Kırp</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="img-container">
                                        <img id="image" src="https://avatars0.githubusercontent.com/u/3456749">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal Et</button>
                                    <button type="button" class="btn btn-success" id="crop">Kırp</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

