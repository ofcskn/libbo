                                    <div class="col-sm-10">
                                        <img src="~/img/@Model.Admin.Image" class="detail-img" />
                                        <input asp-for="Admin.Image" type="file" class="form-control" />
                                        <span class="text-danger" asp-validation-for="Admin.Image"></span>
                                    </div>
                                </div>
