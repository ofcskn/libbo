                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success" value="Gönder" />
                                    <a asp-controller="setting" asp-action="index" class="btn btn-info">Ayarlara Dön</a>
                                </div>
                            </form>
                        }
