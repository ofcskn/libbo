@model Staff

@{
    ViewData["Title"] = "Manage";
}

@section style{
    <link href="~/lib/intl-tel-input-master/build/css/intlTelInput.css" rel="stylesheet" />

}

@section script{
    <script src="~/lib/intl-tel-input-master/build/js/utils.js"></script>
    <script src="~/lib/intl-tel-input-master/build/js/data.js"></script>
    <script src="~/lib/intl-tel-input-master/build/js/intlTelInput-jquery.js"></script>
    <script src="~/lib/intl-tel-input-master/build/js/intlTelInput.js"></script>
    <script>
        var input = document.querySelector("#phone");
        window.intlTelInput(input, {

        });
    </script>
}
<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        @if (Model.Id == 0)
        {
            <h3 class="mb"><i class="fa fa-angle-right"></i> Personel Ekle </h3>
        }
        else
        {
            <h3 class="mb"><i class="fa fa-angle-right"></i> Personel Güncelle </h3>
        }
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">
                    <div class="form-panel">
                        <form asp-controller="staff" asp-action="manage" class="form-horizontal style-form" enctype="multipart/form-data" method="post">
                            <input type="hidden" asp-for="Id" />
                            <p class="form-alert-text">Yazarın skoru kullanıcıların puanlamasına göre değişiklik gösterecektir.</p>
                            <div class="form-group">
                                <label asp-for="Name" class="col-sm-2 col-sm-2 control-label">Ad</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" type="text" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname" class="col-sm-2 col-sm-2 control-label">Soyad</label>
                                <div class="col-sm-10">
                                    <input asp-for="Surname" type="text" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Mail" class="col-sm-2 col-sm-2 control-label">Mail</label>
                                <div class="col-sm-10">
                                    <input asp-for="Mail" type="email" class="form-control">
                                    <span class="text-danger" asp-validation-for="Mail"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="col-sm-2 col-sm-2 control-label">Telefon</label>
                                <div class="col-sm-10">
                                    <input asp-for="Phone" id="phone" type="tel" class="form-control iti">
                                    <span class="text-danger" asp-validation-for="Phone"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Birthday" class="col-sm-2 col-sm-2 control-label">Doğum Günü</label>
                                <div class="col-sm-10">
                                    <input asp-for="Birthday" type="datetime-local" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Birthday"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="DateOfStart" class="col-sm-2 col-sm-2 control-label">İşe Başlama Tarihi</label>
                                <div class="col-sm-10">
                                    <input asp-for="DateOfStart" type="datetime-local" class="form-control" />
                                    <span class="text-danger" asp-validation-for="DateOfStart"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Score" class="col-sm-2 col-sm-2 control-label">Skor</label>
                                <div class="col-sm-10">
                                    <input asp-for="Score" type="number" class="form-control">
                                    <span class="text-danger" asp-validation-for="Score"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label name="Process" class="col-sm-2 col-sm-2 form-check-label">Durum</label>
                                <div class="col-sm-10">
                                    <input name="Process" type="checkbox" class="form-check">
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-success" value="Gönder" />
                                <a asp-controller="staff" asp-action="list" class="btn btn-info">Listeye Dön</a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->