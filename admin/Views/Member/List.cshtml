
@inject IUnitOfWork _uow
@{
    ViewData["Title"] = "List";
}

<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        <h3 class="content-title"><i class="fa fa-angle-right"></i>Üye Listesi</h3>
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover table-responsive-xl">
                        <thead>
                            <tr>
                                <th>Fotoğraf </th>
                                <th>Kullanıcı Adı</th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Mail</th>
                                <th>Telefon</th>
                                <th>Okul</th>
                                <th>İŞLEMLER</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in _uow.Member.GetAll())
                            {
                                <tr>
                                    <td><img src="~/upload/@member.Image" class="mytable-img" /></td>
                                    <td>@member.UserName</td>
                                    <td>@member.Name</td>
                                    <td>@member.Surname</td>
                                    <td>@member.Mail</td>
                                    <td>@member.Phone</td>
                                    <td>@member.School</td>
                                    <td>
                                        <a asp-controller="member" asp-action="manage" asp-route-id="@member.Id" class="btn btn-primary btn-xs"><i class="fa fa-check"></i></a>
                                        <a asp-controller="member" asp-action="delete" asp-route-id="@member.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->
