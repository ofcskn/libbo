@model IEnumerable<Admin>

@{
    ViewData["Title"] = "List";
}

<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        <h3 class="content-title"><i class="fa fa-angle-right"></i>YÖNETİCİ LİSTESİ</h3>
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover table-responsive-xl">
                        <thead>
                            <tr>
                                <th>Fotoğraf </th>
                                <th>Yönetici</th>
                                <th>Id</th>
                                <th>İsim</th>
                                <th>Soyisim</th>
                                <th>Kullanıcı Adı</th>
                                <th>Telefon</th>
                                <th>Mail</th>
                                <th>Adres</th>
                                <th>Son Giriş Tarihi</th>
                                <th>İŞLEMLER</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var admin in Model)
                                {
                                    <tr>
                                        <td><img src="~/img/@admin.Image" class="mytable-img" /></td>
                                        <td>
                                            <div class="form-group form-check">
                                                <input name="IsAdmin" class="form-check-input" type="checkbox" value="@admin.Id" @(Convert.ToBoolean(admin.IsAdmin) ? "checked" : string.Empty)>
                                            </div>
                                        </td>
                                        <td class="hidden-phone">@admin.Id</td>
                                        <td class="hidden-phone">@admin.Name</td>
                                        <td>@admin.Surname</td>
                                        <td>@admin.UserName</td>
                                        <td>@admin.Phone</td>
                                        <td>@admin.Email</td>
                                        <td>@admin.Adress</td>
                                        <td>@admin.LastLoginDate</td>
                                        <td>
                                            <a asp-controller="admin" asp-action="onay" asp-route-id="@admin.Id" class="btn btn-success btn-xs"><i class="fa fa-check"></i></a>
                                            <a asp-controller="admin" asp-action="manage" asp-route-id="@admin.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                            <a asp-controller="admin" asp-action="delete" asp-route-id="@admin.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                    <a asp-controller="admin" asp-action="manage" class="list-create-btn btn btn-success btn-xs ml-2"><i class="fa fa-plus "></i>EKLE</a>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->
