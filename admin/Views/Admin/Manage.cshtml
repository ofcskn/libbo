@model Admin

@{
    ViewData["Title"] = "Manage";
}
@section style{ 
<style>
    .form-title{
        margin: 20px 0;
        padding-bottom:10px;
        border-bottom:1px solid #b0b0b0;
    }
    .form-alert-text{
        color:#d50000;
        font-weight:400;
        margin:5px 0;
    }.detail-img
            {
                height: 200px;
                width: 200px;
                object-fit: cover;
            }
</style>

}
<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        @if (Model.Id == 0)
        {
            <h3 class="mb"><i class="fa fa-angle-right"></i> Yönetici Ekle </h3>
        }
        else
        {
            <h3 class="mb"><i class="fa fa-angle-right"></i> Yönetici Güncelle </h3>
        }
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">
                    <div class="form-panel">
                        <form asp-controller="admin" asp-action="manage" class="form-horizontal style-form" enctype="multipart/form-data" method="post">
                            <input type="hidden" asp-for="Id"/>
                            <input type="hidden" asp-for="Image"/>
                            <input type="hidden" asp-for="Role"/>
                            <input type="hidden" asp-for="IsAdmin"/>
                            <h4 class="form-title">Kişisel Bilgiler</h4>
                            <div class="form-group">
                                <label asp-for="Name" class="col-sm-2 col-sm-2 control-label">Ad</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" type="text" class="form-control" >
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname" class="col-sm-2 col-sm-2 control-label">Soyad</label>
                                <div class="col-sm-10">
                                    <input asp-for="Surname" type="text" class="form-control">
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="col-sm-2 col-sm-2 control-label">Email</label>
                                <div class="col-sm-10">
                                    <input asp-for="Email" type="text" class="form-control">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="col-sm-2 col-sm-2 control-label">Telefon</label>
                                <div class="col-sm-10">
                                    <input asp-for="Phone" type="text" class="form-control">
                                    <span class="text-danger" asp-validation-for="Phone"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Adress" class="col-sm-2 col-sm-2 control-label">Adres</label>
                                <div class="col-sm-10">
                                    <textarea rows="5" asp-for="Adress" type="text" class="form-control" ></textarea>
                                    <span class="text-danger" asp-validation-for="Adress"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Image" class="col-sm-2 col-sm-2 control-label">Fotoğraf</label>
                                <div class="col-sm-10">
                                    <input asp-for="Image" type="file" class="form-control" />
                                    <img src="~/img/@Model.Image" class="detail-img" />
                                    <span class="text-danger" asp-validation-for="Image"></span>
                                </div>
                            </div>
                            <h4 class="form-title">Kullanıcı Bilgileri</h4>
                            <div class="form-group">
                                <label asp-for="UserName" class="col-sm-2 col-sm-2 control-label">Kullanıcı Adı</label>
                                <div class="col-sm-10">
                                    <input asp-for="UserName" type="text" class="form-control" />
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="col-sm-2 col-sm-2 control-label">Kullanıcı Şifresi</label>
                                <div class="col-sm-10">
                                    <input name="Password" value="@Model.Password" type="password" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <label class="col-sm-auto form-alert-text">Sisteme yukarıdaki kullanıcı adı ve şifre ile giriş yapılabilmektedir.</label>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-success" value="Gönder" />
                                <a asp-controller="admin" asp-action="list" class="btn btn-info">Listeye Dön</a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->