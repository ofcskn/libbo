                                        <h3>@_uow.Author.GetAll().Count()</h3>
                                        <p>Yazar Sayısı</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Chart and To do List-->
                    <div class="total-sales">
                        <div class="user-trends">
