                                {
                                    <div class="check">
                                        <div class="row">
                                            <input type="checkbox" class="col-sm-2 form-check" />
                                            <label class="col-sm-10">@todo.Goal</label>
                                        </div>
                                        
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <!--Wordl Map-->
                    <div class="total-world">
