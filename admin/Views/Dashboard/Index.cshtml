@inject IUnitOfWork _uow

@{
    ViewData["Title"] = "Index";
}
@section style{
    <link href="~/lib/chart.js/dist/Chart.css" rel="stylesheet" />
    <style>
        .myChart
        {
            width: 100%;
            height: 300px;
        }

        #map
        {
            width: 100%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
        }

        .site-report
        {
            width: auto;
        }

        .world-map
        {
            position: relative;
            background: #fff;
        }

        .weather
        {
            margin: 50px 0;
        }

            .weather .weatherwidget
            {
                margin-bottom: 20px;
            }

        .widget-list .grid-widget
        {
            padding: 0 20px;
            margin-bottom:20px;
        }

            .widget-list .grid-widget .widget
            {
                background: #ff6a00;
                color: #fff;
                padding: 20px;
                height: 175px;
                display:flex;
                align-items:center;
            }

            .widget-list .grid-widget .widget-gray
            {
                background: #606060;
            }

            .widget-list .grid-widget .widget-blue
            {
                background: #005ec4;
            }

            .widget-list .grid-widget .widget-yellow
            {
                background: #ffd800;
            }

            .widget-list .grid-widget .widget-darkred
            {
                background: #c60000;
            }


            .widget-list .grid-widget .widget-purple
            {
                background: #ed00a7;
            }

            .widget-list .grid-widget .widget .icon
            {
                font-size: 40px;
                color: #fff;
                margin: 10px;
            }

            .widget-list .grid-widget .widget .icon-text
            {
                text-align: center;
            }

                .widget-list .grid-widget .widget .icon-text h3
                {
                    font-weight: 700;
                    font-size: 38px;
                }

                .widget-list .grid-widget.widget .icon-text p
                {
                    font-weight: 400;
                    font-size: 22px;
                }
    </style>
}
@section script{
    <script src="~/lib/world-map-trial/mapdata.js"></script>
    <script src="~/lib/world-map-trial/worldmap.js"></script>
    <script src="~/lib/chart.js/dist/Chart.js"></script>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
                datasets: [{
                    label: '# of Votes',
                    data: [12, 19, 3, 5, 2, 3],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}


<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        <h3 class="content-title"><i class="fa fa-angle-right"></i>Anasayfa</h3>
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">

                    <div class="widget-list">
                        <div class="row">
                            <div class="grid-widget col-sm-6 col-xl-3">
                                <div class="widget widget-purple row">
                                    <div class="icon col-sm-3">
                                        <i class="fa fa-dollar"></i>
                                    </div>
                                    <div class="icon-text col-sm-8">
                                        <h3>@_uow.Member.GetAll().Count()</h3>
                                        <p>Toplam Üye Sayısı</p>
                                    </div>
                                </div>
                            </div>
                            <div class="grid-widget col-sm-6 col-xl-3">
                                <div class="widget widget-blue row">
                                    <div class="icon col-sm-3">
                                        <i class="fa fa-book"></i>
                                    </div>
                                    <div class="icon-text col-sm-8">
                                        <h3>@_uow.Book.GetAll().Count()</h3>
                                        <p>Toplam Kitap Sayısı</p>
                                    </div>
                                </div>
                            </div>
                            <div class="grid-widget col-sm-6 col-xl-3">
