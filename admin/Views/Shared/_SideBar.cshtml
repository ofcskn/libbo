            <li>
                <a asp-controller="ToDoList" asp-action="List"><i class="fa fa-check-square"></i>Yapılacaklar Listesi</a>
            </li>
            <li>
                <a href="#categorySubMenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-list"></i>Kategoriler</a>
