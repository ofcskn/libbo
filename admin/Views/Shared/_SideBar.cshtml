                    <li>
                        <a asp-controller="dashboard" asp-action="weather"><i class="fa fa-umbrella"></i>Hava Durumu</a>
                    </li>
                    <li>
                        <a asp-controller="dashboard" asp-action="gallery"><i class="fa fa-image"></i>Slider Galeri</a>
