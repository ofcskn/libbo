@inject IUnitOfWork _uow

<nav id="sidebar">
    <div class="sidebar-header text-center">
        <div class="user-content">
            @if (_uow.Admin.GetTypeByAdmin == "admin")
            {
                <img class="user-image" src="~/img/@_uow.Admin.GetImageByAdmin" />
                <p class="user-name">@_uow.Admin.GetNameByAdmin</p>
                <span class="user-name">@_uow.Admin.GetMailByAdmin</span>
            }
            @if (_uow.Member.GetTypeByMember == "member")
            {
                <img class="user-image" src="~/upload/@_uow.Member.GetImageByMember" />
                <p class="user-name">@_uow.Member.GetNameByMember</p>
                <span class="user-name">@_uow.Member.GetMailByMember</span>
            }
            <p class="user-role"></p>

        </div>
    </div>

    <ul class="components">
        <li class="list-title">
            <p>Admin Panelim</p>
            <span></span>
        </li>
        @if (_uow.Admin.GetTypeByAdmin == "admin")
        {
            <li>
                <a asp-controller="dashboard" asp-action="index"><i class="fa fa-home"></i>Anasayfa</a>
            </li>
            <li>
                <a href="/"><i class="fa fa-hacker-news"></i>Vitrin</a>
            </li>
            <li>
                <a href="#dashboardSubMenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-dashboard"></i>İstatistikler</a>
