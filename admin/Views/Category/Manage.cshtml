@model Category

@{
    ViewData["Title"] = "Manage";
}

<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        @if (Model.Id == 0)
        {
            <h3 class="mb"><i class="fa fa-angle-right"></i> Kategori Ekle </h3>
        }
        else
        {
            <h3 class="mb"><i class="fa fa-angle-right"></i> Kategori Güncelle </h3>
        }
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">
                    <div class="form-panel">
                        <form asp-controller="Category" asp-action="Manage" class="form-horizontal style-form" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Name" class="col-sm-2 col-sm-2 control-label">Kategori Adı</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" type="text" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-success" value="Gönder" />
                                <a asp-controller="Category" asp-action="List" class="btn btn-info">Listeye Dön</a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->