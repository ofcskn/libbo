@model PaginatedList<Category>

@{
    ViewData["Title"] = "List";
}

<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        <h3 class="content-title"><i class="fa fa-angle-right"></i>KATEGORİ LİSTESİ</h3>
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover table-responsive-xl">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>İsim</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td class="hidden-phone">@category.Id</td>
                                    <td class="hidden-phone">@category.Name</td>
                                    <td>
                                        <a asp-controller="category" asp-action="manage" asp-route-id="@category.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                        <a asp-controller="category" asp-action="delete" asp-route-id="@category.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="float-right">
                        @{
                            var prevDisabled = !Model.PreviousPage ? "disabled" : "";
                            var nextDisabled = !Model.NextPage ? "disabled" : "";
                        }
                        <a asp-action="List" asp-route-pageNumber="@(Model.PageIndex - 1)"
                           class="btn btn-dark @prevDisabled">Geri</a>
                        <a asp-action="List" asp-route-pageNumber="@(Model.PageIndex + 1)"
                           class="btn btn-dark @nextDisabled">İleri</a>
                    </div>
                    <a asp-controller="category" asp-action="manage" class="list-create-btn btn btn-success btn-xs ml-2"><i class="fa fa-plus "></i>EKLE</a>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->
