@model Contact

@{
    ViewData["Title"] = "List";
}


<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        <h3 class="content-title"><i class="fa fa-angle-right"></i>İletişim Formu Mesaj Detayı</h3>
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">
                    <div class="contact-detail">
                        <form asp-controller="Contact" asp-action="List" method="get">
                            <input type="hidden" asp-for="Id" />
                            <h4 class="form-title">Kişisel Bilgiler</h4>
                            <div class="form-group">
                                <label asp-for="Name" class="col-sm-2 col-sm-2 control-label">Ad</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" type="text" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Mail" class="col-sm-2 col-sm-2 control-label">Mail</label>
                                <div class="col-sm-10">
                                    <input asp-for="Mail" type="text" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Subject" class="col-sm-2 col-sm-2 control-label">Konu</label>
                                <div class="col-sm-10">
                                    <input asp-for="Subject" type="text" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Message" class="col-sm-2 col-sm-2 control-label">Mesaj</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Message" type="text" class="form-control" disabled></textarea>
                                </div>
                            </div>
                            <a asp-controller="contact" asp-action="list" class="list-create-btn btn btn-success btn-xs ml-2"><i class="fa fa-arrow-left "></i>  Listeye Dön</a>
                            <a asp-controller="contact" asp-action="delete" asp-route-id="@Model.Id" class="list-create-btn btn btn-danger btn-xs ml-2"><i class="fa fa-trash "></i></a>
                        </form>
                    </div>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->
