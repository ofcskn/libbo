@model IEnumerable<Contact>

@{
    ViewData["Title"] = "List";
}


<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        <h3 class="content-title"><i class="fa fa-angle-right"></i>İletişim Formu Mesaj Listesi</h3>
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover table-responsive-xl">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>İsim</th>
                                <th>Mail</th>
                                <th>Konu</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="5">
                                        <p class="text-center text-black-50 my-3">Gönderilmiş herhangi bir mesaj bulunamamıştır.</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var contact in Model)
                                {
                                    <tr>
                                        <td>@contact.Id</td>
                                        <td>@contact.Name</td>
                                        <td>@contact.Subject</td>
                                        <td>@contact.Mail</td>
                                        <td>
                                            <a asp-controller="contact" asp-action="detail" asp-route-id="@contact.Id" class="btn btn-success btn-xs"><i class="fa fa-check"></i></a>
                                            <a asp-controller="contact" asp-action="delete" asp-route-id="@contact.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->
