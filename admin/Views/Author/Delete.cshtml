@model Author

@{
    ViewData["Title"] = "Delete";
}

<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        <h3 class="mb"><i class="fa fa-angle-right"></i> Yazar Sil</h3>
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">
                    <div class="form-panel">
                        <form asp-controller="author" asp-action="delete" class="form-horizontal style-form" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <p><b>@Model.Name.ToUpper() @Model.Surname.ToUpper()</b> isimli yazarı silmek istiyor musunuz?</p>
                                <p>Yazar Detayları Gelecek : kitap sayısı vb</p>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-danger" value="Sil" />
                                <a asp-controller="author" asp-action="list" class="btn btn-info">Geri Dön</a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->
