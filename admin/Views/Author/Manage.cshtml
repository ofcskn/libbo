@model Author

@{
    ViewData["Title"] = "Manage";
}
@section style{ 
<style>
    .detail-img
    {
        height: 200px;
        width: 200px;
        object-fit: cover;
    }
</style>
}

<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        @if (Model.Id == 0)
        {
            <h3 class="mb"><i class="fa fa-angle-right"></i> Yazar Ekle </h3>
        }
        else
        {
            <h3 class="mb"><i class="fa fa-angle-right"></i> Yazar Güncelle </h3>
        }
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">
                    <div class="form-panel">
                        <form asp-controller="author" asp-action="manage" class="form-horizontal style-form" enctype="multipart/form-data" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Image" />
                            <input type="hidden" name="Image" value="@Model.Image"/>
                            <p class="form-alert-text">Yazarın skoru kullanıcıların puanlamasına göre değişiklik gösterecektir.</p>
                            <div class="form-group">
                                <label asp-for="Name" class="col-sm-2 col-sm-2 control-label">Ad</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" type="text" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname" class="col-sm-2 col-sm-2 control-label">Soyad</label>
                                <div class="col-sm-10">
                                    <input asp-for="Surname" type="text" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="col-sm-2 col-sm-2 control-label">Telefon</label>
                                <div class="col-sm-10">
                                    <input asp-for="Phone" type="tel" class="form-control">
                                    <span class="text-danger" asp-validation-for="Phone"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="HomeTown" class="col-sm-2 col-sm-2 control-label">Memleket</label>
                                <div class="col-sm-10">
                                    <input asp-for="HomeTown" type="text" class="form-control" />
                                    <span class="text-danger" asp-validation-for="HomeTown"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Country" class="col-sm-2 col-sm-2 control-label">Ülke</label>
                                <div class="col-sm-10">
                                    <input asp-for="Country" type="text" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Country"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Image" class="col-sm-2 col-sm-2 control-label">Fotoğraf</label>
                                <div class="col-sm-10">
                                    <input name="Image" type="text" class="form-control">
                                    <img src="/img/author/@Model.Image" class="detail-img" />
                                    <span class="text-danger" asp-validation-for="Image"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Birthday" class="col-sm-2 col-sm-2 control-label">Doğum Günü</label>
                                <div class="col-sm-10">
                                    <input asp-for="Birthday" type="datetime-local" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Birthday"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="DeathDay" class="col-sm-2 col-sm-2 control-label">Ölüm Günü</label>
                                <div class="col-sm-10">
                                    <input asp-for="DeathDay" type="datetime-local" class="form-control">
                                    <span class="text-danger" asp-validation-for="DeathDay"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Biography" class="col-sm-2 col-sm-2 control-label">Biyografi</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Biography" class="form-control"></textarea>
                                    <span class="text-danger" asp-validation-for="Biography"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-success" value="Gönder" />
                                <a asp-controller="author" asp-action="list" class="btn btn-info">Listeye Dön</a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->